<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/primary_light"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/bottle"
        android:src="@drawable/bottle_100"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/image"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:layout_weight="3"/>

    <!--row1-->
    <LinearLayout style="@style/RowLayoutMain"
        android:layout_marginTop="@dimen/spacing_large">

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/per_hour"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/per_hour">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/per_hour" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/per_hour" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/cup_of_water"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/cup_of_water">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/cup_of_water" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/cup_of_water" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/ibm"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/ibm">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/ibm" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/ibm" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!--row2-->
    <LinearLayout style="@style/RowLayoutMain">

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/temperature"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/temperature">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/temperature" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/temperature" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/mass_of_water"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/mass_of_water">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/mass_of_water" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/mass_of_water" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout style="@style/CardLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/heartbeat"
                style="@style/TypeCard"
                app:cardBackgroundColor="@color/heartbeat">

                <TextView
                    style="@style/CardTitle.Large"
                    android:text="@string/heartbeat" />

                <ImageView
                    style="@style/CardImage.Large"
                    android:src="@drawable/heartbeat" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
