<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog" />

    <style name="TypeCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="CardImage">
        <item name="android:layout_width">@dimen/card_image_width</item>
        <item name="android:layout_height">@dimen/card_image_width</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_padding</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/ic_android_black_48dp</item>
        <item name="android:contentDescription">@string/image</item>
    </style>

    <style name="CardImage.Small" parent="CardImage">
        <item name="android:layout_width">@dimen/card_image_width_small</item>
        <item name="android:layout_height">@dimen/card_image_width_small</item>
    </style>

    <style name="CardImage.Large" parent="CardImage">
        <item name="android:layout_width">@dimen/card_image_width_large</item>
        <item name="android:layout_height">@dimen/card_image_width_large</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">@dimen/card_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_padding</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_padding</item>
        <item name="android:layout_gravity">top|start</item>
        <item name="android:text">@string/dummy</item>
        <item name="android:textSize">@dimen/text_size_card_header</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTitle.Small" parent="CardTitle">
        <item name="android:layout_width">@dimen/card_text_width_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_card_header_small</item>
    </style>

    <style name="CardTitle.Large" parent="CardTitle">
        <item name="android:layout_width">@dimen/card_text_width_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_detail_card_header_large</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1.3</item>
    </style>

    <style name="RowLayoutMain" parent="RowLayout">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_check_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
