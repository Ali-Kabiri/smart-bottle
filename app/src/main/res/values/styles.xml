<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog"/>

    <style name="TypeCard" parent="CardView">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:paddingTop">@dimen/card_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/card_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/card_horizontal_padding</item>
    </style>

    <dimen name="card_vertical_padding">24dp</dimen>
</resources>
